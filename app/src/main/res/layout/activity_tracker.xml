<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="jdaniel29.tefaptracker.activities.Tracker">


        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:orientation="vertical">

            <ListView android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight=".6" android:id="@+id/screenListView"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                            android:layout_weight=".4" android:gravity="top">

                <Button android:layout_width="0dp" android:layout_height="wrap_content"
                        android:text="Increment All" android:layout_weight=".33"
                        android:id="@+id/incrementAllButton"/>

                <Button android:layout_width="0dp" android:layout_height="wrap_content"
                        android:text="Decrement All" android:layout_weight=".33"
                        android:id="@+id/decrementAllButton"/>

                <Button android:layout_width="0dp" android:layout_height="wrap_content"
                        android:text="File Management" android:layout_weight=".33"
                        android:id="@+id/pickFileButton"/>


            </LinearLayout>
        </LinearLayout>


</LinearLayout>
