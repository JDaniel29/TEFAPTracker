<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
            android:padding="10dp"
              android:id="@+id/commodity_details_layout">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <include layout="@layout/fragment_add_commodity_dialog"    />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:weightSum="1"
                          android:orientation="horizontal" android:gravity="center_horizontal" android:layout_weight=".15">


                <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Cancel Changes"
                        android:id="@+id/cancelChangesButton" android:layout_weight=".33"/>

                <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Remove Commodity"
                        android:id="@+id/removeButton" android:layout_weight=".33"/>

                <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Confirm Changes"
                        android:id="@+id/confirmChangesButton" android:layout_weight=".33"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>